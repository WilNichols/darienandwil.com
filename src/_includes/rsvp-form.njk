{% macro rsvpForm(i, party) -%}
  {% set attendee = party[i] %}
  {% if i == 0 %}
    {% set title = rsvpSteps.yourFormTitle %}
    {% set namePlaceholder = rsvpSteps.yourNamePlaceholder %}
    {% set attendeeName = party[i].name %}
    {% set attendingBool = 'checked' %}
  {% else %}
    {% if i == 1 %}
      {% set title = rsvpSteps.othersFormsTitle %}
    {% endif %}
    {% if attendee.placeholder %}
      {% set namePlaceholder = attendee.placeholder %}
    {% else %}
      {% set namePlaceholder = rsvpSteps.guestPlaceholder %}
    {% endif %}
  {% endif %}
  <fieldset class="rsvp-form-item__container" name="attendee-{{ i }}" form="{{ meta.rsvpForm1 }}" >
    <legend class="rsvp-form-item__title">{{ title }}</legend>
    <div class="rsvp-form-item__fields">
      <input 
        name="{{ i }}--correctedName"
        form="{{ meta.rsvpForm1 }}"
        type="text" 
        class="ui-textfield rsvp-form-item__name"
        placeholder="{{ namePlaceholder }}"
        
        {% if attendee.name %}value="{{ attendee.name }}"{% endif %}
        />
        {% set attendingBoolId %}{{ i }}--attending{% endset %}
      <label for="{{ attendingBoolId }}" class="rsvp-form-item__is-attending rsvp-form-item---bool">
        <input 
          name="{{ attendingBoolId }}"
          form="{{ meta.rsvpForm1 }}"
          id="{{ attendingBoolId }}"
          type="checkbox" 
          value="isAttending"
          class="isAttending"
          onClick="setDefaultMeal()"
          {{ attendingBool }}
          />
        {{ rsvpSteps.attendingBool }}
      </label>
      <fieldset class="rsvp-form__meal-choices__container" name="{{ i }}--meal" form="{{ meta.rsvpForm1 }}">
        <legend class="rsvp-form__meal-choices__title">{{ rsvpSteps.mealsTitle }}</legend>
        {{ mealChoiceLoop(attendee, i) }}
      </fieldset>
    </div>
  </fieldset>
{%- endmacro %}

{% macro mealChoiceLoop(attendee, i) %}
  <ul class="rsvp-form__meal-choices__list">
    {% if attendee.kid %}
      {{ mealChoice(
        rsvpSteps.kids, 
        rsvpSteps.kidsMealLong, 
        checked = false, 
        parentIndex = i)
      }}
    {% endif %}
    {% for meal in rsvpSteps.adult %}
      {% set thisIndex = loop.index %}
      {% if ((parentLoop.index == 1) and (thisIndex == 1)) %}
        {% set mealSelection = true %}
      {% else %}
        {% set mealSelection = false %}
      {% endif %}
      {% if choiceIndex == 1 %}
          {% set label = meal.long %}
      {% else %}
          {% set label = meal.short %}
      {% endif %}
      {{ mealChoice(
        meal, 
        label, 
        checked = mealSelection, 
        parentIndex = i)
      }}
    {% endfor %}
  </ul>
{% endmacro %}

{% macro 
  mealChoice(
    meal, 
    label, 
    checked, 
    parentIndex) 
-%}
  {% set mealCode -%}{{ parentIndex }}--meal{%- endset %}
  <li class="rsvp-form__meal-choice">
    <label 
      class="rsvp-form-item---bool"
      for="{{ mealCode }}">
      <input 
        type="radio" 
        name="{{ mealCode }}"
        id="{{ meal.short }}" 
        value="{{ meal.short }}"
        form="{{ meta.rsvpForm1 }}"
        {% if checked %}checked{% endif %}
        />
      <span class="">
        {{ label }}
      </span>
    </label>
  </li>
{%- endmacro %}