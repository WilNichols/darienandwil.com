{% macro rsvpForm(loop, attendee) -%}
  {% if loop.index == 1 %}
    {% set title = rsvpSteps.yourFormTitle %}
    {% set namePlaceholder = rsvpSteps.yourNamePlaceholder %}
    {% set attendeeName = invitation.name %}
    {% set attendingBool = 'checked' %}
  {% else %}
    {% if loop.index == 2 %}
      {% set title = rsvpSteps.othersFormsTitle %}
    {% endif %}
    {% if attendee.placeholder %}
      {% set namePlaceholder = attendee.placeholder %}
    {% else %}
      {% set namePlaceholder = rsvpSteps.guestPlaceholder %}
    {% endif %}
    {% set hidetitle = true %}
  {% endif %}
  <fieldset class="rsvp-form-item__container" data-step="party">
    <legend class="rsvp-form-item__title">{{ title }}</legend>
    <div class="rsvp-form-item__fields">
      <input 
        name="{{ loop.index }}--correct-name"
        type="text" 
        class="ui-textfield rsvp-form-item__name"
        placeholder="{{ namePlaceholder }}"
        {% if attendee.name %}value="{{ attendee.name }}"{% endif %}
        />
        {% set attendingBoolID %}attendee-{{ loop.index }}--attendingBool{% endset %}
      <label for="{{ attendingBoolID }}" class="rsvp-form-item__is-attending rsvp-form-item---bool">
        <input 
          name="{{ loop.index }}--attending"
          id="{{ attendingBoolID }}"
          type="checkbox" 
          value="isAttending"
          class="isAttending"
          onClick="setDefaultMeal()"
          {{ attendingBool }}
          />
        {{ rsvpSteps.attendingBool }}
      </label>
      <div class="rsvp-form__meal-choices__container">
        <span class="rsvp-form__meal-choices__title">{{ rsvpSteps.mealsTitle }}</span>
        {{ mealChoiceLoop(attendee, loop) }}
      </div>
    </div>
  </fieldset>
{%- endmacro %}

{% macro mealChoiceLoop(attendee, parentLoop) %}
  <ul class="rsvp-form__meal-choices__list">
    {% if attendee.kid %}
      {{ mealChoice(
        rsvpSteps.kids, 
        rsvpSteps.kidsMealLong, 
        checked = false, 
        parentIndex = parentLoop.index)
      }}
    {% endif %}
    {% for meal in rsvpSteps.adult %}
      {% set thisIndex = loop.index %}
      {% if ((parentLoop.index == 1) and (thisIndex == 1)) %}
        {% set mealSelection = true %}
      {% else %}
        {% set mealSelection = false %}
      {% endif %}
      {% if choiceIndex == 1 %}
          {% set label = meal.long %}
      {% else %}
          {% set label = meal.short %}
      {% endif %}
      {{ mealChoice(
        meal, 
        label, 
        checked = mealSelection, 
        parentIndex = parentLoop.index)
      }}
    {% endfor %}
  </ul>
{% endmacro %}

{% macro 
  mealChoice(
    meal, 
    label, 
    checked, 
    parentIndex) 
-%}
  {% set mealCode -%}{{ parentIndex }}--meal{%- endset %}
  <li class="rsvp-form__meal-choice">
    <label 
      class="rsvp-form-item---bool"
      for="{{ mealCode }}">
      <input 
        type="radio" 
        name="{{ mealCode }}"
        id="{{ meal.short }}" 
        value="{{ meal.short }}"
        {% if checked %}checked{% endif %}
        />
      <span class="">
        {{ label }}
      </span>
    </label>
  </li>
{%- endmacro %}